{
  "expo": {
    "name": "Todo app",
    "slug": "Todo",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FFFFFF"
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "description": "A simple todo app built to understand React-native fundamentals\n\n-you can add tasks\n-delete tasks\n-clear all tasks\n-specify whether the task is done or not\n-validate to make sure that the task is at least 5 characters",
    "githubUrl": "https://github.com/Muhamedsafwat/React-native-todo-app"
  }
}
